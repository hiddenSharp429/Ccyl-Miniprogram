<van-popup show="{{ popShow }}" position="top" custom-style="height: 300rpx;" round>
  <view class="main">
    <view class="bow">
      <view class="bow__base"></view>
      <view class="bow__top"></view>
      <view class="bow__bottom"></view>
      <view class="rope">
        <view class="rope__top"></view>
        <view class="rope__bottom"></view>
      </view>
    </view>
    <view class="arrow">
      <view class="arrow__line"></view>
      <view class="arrow__head"></view>
      <view class="arrow__top"></view>
      <view class="arrow__bottom"></view>
    </view>
    <view class="line line-1"></view>
    <view class="line line-2"></view>
    <view class="wall"></view>
  </view>

</van-popup>